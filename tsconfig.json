{
  "compilerOptions": {
    // 厳密モードとして設定
    "strict": true,
    // ソースマップを有効化
    "sourceMap": true,
    // TSはECMAScript 5に変換
    "target": "ES6",
    // TSのモジュールはES Modulesとして出力
    "module": "ES2015",
    // JSXの書式を有効に設定
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "lib": [
      "ES2023",
      "DOM"
    ],
    "noImplicitAny": false,
    "noEmit": false,
    "noEmitOnError": false,
    "emitDeclarationOnly": false
  }
}
